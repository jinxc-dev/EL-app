@import "/common.wxss";


.media-btn {
    display: flex;
    /* height: 100rpx; */
}

.media-btn .btn {
    height: 100rpx;
    width: 100rpx;
    border-radius:50rpx;
}

.play-btn .btn {
    background-color: #0C66FF;
    background-image: url("data:image/png;base64,");
    background-size:30rpx 30rpx;
    background-position:center;
    background-repeat:no-repeat;
}

.play-btn .text {
    color: #0C66FF;
    padding-left: 20rpx;
    font-weight: bold;
    font-size: 28rpx;
    display: flex;
    justify-content: center; /* align horizontal */
    align-items: center;
}

.stop-btn .btn {
    background-color: #F03D3D;
    background-image: url("data:image/png;base64,");
    background-size:28rpx 28rpx;
    background-position:center;
    background-repeat:no-repeat;
    z-index: 1;
}

.stop-btn .signal {
    background-color: #0C66FF;
    width: 100%;
    height: 100rpx;
    border-radius: 50rpx;
    /* position: static; */
    margin-left: -95rpx;
    z-index: 0;

}

.signal-bg {
    margin-left: 80rpx;
}

